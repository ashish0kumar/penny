import { userQueryOptions } from '@/lib/api'
import { useQuery } from '@tanstack/react-query'
import { createFileRoute } from '@tanstack/react-router'

export const Route = createFileRoute('/_authenticated/profile')({
    component: Profile,
})

function Profile() {
    const { isPending, error, data } = useQuery(userQueryOptions);

    if (isPending) return <div className="p-2 my-4 text-center">Loading...</div>
    if (error) return <div className="p-2 my-4 text-center">Not logged in</div>

    return <div className="p-2">
        <h1 className='text-center my-4 text-xl'>Profile</h1>
        <p className='text-center'>Welcome {data.user.given_name}!</p>
    </div>
}